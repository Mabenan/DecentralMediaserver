{
  "name": "decentral-mediaserver",
  "version": "1.2.2",
  "main": "dist/main.js",
  "scripts": {
    "ng": "ng",
    "start": "startmysql.bat && npm run electron:start",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "electron-builder install-app-deps",
    "electron:start": "npm-run-all -p postinstall ng:clean ng:build electron:serve",
    "ng:clean": "rimraf dist && rimraf main.js",
    "electron:serve": "wait-on ./dist/electron-angular/index.html && npm run electron:watch",
    "ng:build": "ng build --watch=true --poll 1000 ",
    "electron:tsc": "tsc -p tsconfig.entity.json && tsc -p tsconfig.migration.json && tsc -w -p tsconfig.backend.json",
    "electron:run": "wait-on dist/main.js && electron . --serve --console --development --remote-debugging-port=9222",
    "electron:exit": "taskkill /IM electron.exe /F",
    "electron:watch": "concurrently --kill-others \"npm run electron:tsc \"  \"npm run electron:run\"",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "electron:exe": "electron . --serve --console --development --remote-debugging-port=9222"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "net": false,
    "tls": false,
    "zlib": false
  },
  "build": {
    "asar": true,
    "productName": "Decentral Mediaserver",
    "appId": "com.electron.decentral-mediaserver",
    "copyright": "Mabenan",
    "files": [
      "dist/main.js",
      "dist"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.music.decentral-mediaserver"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "installerIcon": "./src/assets/images/icon.ico",
      "uninstallerIcon": "./src/assets/images/icon.ico",
      "uninstallDisplayName": "Decentral Mediaserver 1.2.2"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./src/assets/images/icon.ico"
    },
    "linux": {
      "category": "Music",
      "icon": "./src/assets/images/icon.ico",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Mackignacio/decentral-mediaserver.git"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.1.3",
    "@angular/cdk": "^7.1.1",
    "@angular/material": "^7.3.7",
    "@angular/platform-server": "^8.1.3",
    "@nguniversal/module-map-ngfactory-loader": "^8.1.1",
    "@types/async": "^3.0.1",
    "@types/bootstrap": "^4.2.1",
    "@types/ftp": "^0.3.29",
    "@types/jquery": "^3.3.30",
    "@types/mysql": "^2.15.6",
    "async": "^3.1.0",
    "bootstrap": "^4.2.1",
    "buffer": "^5.2.1",
    "chart.js": "^2.5.0",
    "core-js": "^2.5.4",
    "events": "^3.0.0",
    "express": "^4.17.1",
    "ftp": "^0.3.10",
    "jquery": "^3.4.1",
    "mysql": "^2.17.1",
    "popper.js": "^1.15.0",
    "rxjs": "^6.0.0",
    "stream": "0.0.2",
    "timers": "^0.1.1",
    "tslib": "^1.9.0",
    "typeorm": "^0.2.18",
    "yargs": "^12.0.5",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.1",
    "@angular/cli": "~7.1.4",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.1.3",
    "@angular/http": "^7.1.3",
    "@angular/language-service": "^7.1.3",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.1.3",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "concurrently": "^3.6.1",
    "electron": "^3.1.3",
    "electron-builder": "^20.44.4",
    "electron-reload": "^1.4.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.6",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "protractor": "^5.4.2",
    "ts-loader": "^6.0.4",
    "ts-node": "~5.0.1",
    "tsconfig-paths": "^3.8.0",
    "tslint": "~5.9.1",
    "typescript": "^3.2.4",
    "wait-on": "^2.1.0",
    "webpack-cli": "^3.3.6"
  }
}
